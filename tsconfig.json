{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "lib": [
            "es2020"
        ],
        "moduleResolution": "node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "outDir": "dist",
        "types": [
            "@vercel/node"
        ]
    },
    "include": [
        "api/**/*",
        "api/_client.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}